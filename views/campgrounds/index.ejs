<% layout('/layouts/boilerplate') %>
<div class="mb-5 d-flex justify-content-between">
	<h1>All Campgrounds</h1>
	<a class="btn btn-success mb-3" href="/campgrounds/new"
		>Create new campground</a
	>
</div>

<% for (let campground of campgrounds) { %>

<div class="card mb-5">
	<div class="row">
		<div class="col-md-4">
			<img src="<%= campground.image %>" alt="camp" class="img-fluid center" />
		</div>
		<div class="col-md-8">
			<h5 class="card-title pt-2"><%= campground.title %></h5>
			<p class="card-text"><%= campground.description %></p>
			<p class="card-text">
				<small class="text-muted"><%= campground.location %></small>
			</p>
			<a href="/campgrounds/<%= campground.id %>" class="btn btn-primary mb-3"
				>View campground</a
			>
		</div>
	</div>
</div>

<% } %>
