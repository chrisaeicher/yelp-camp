<% layout('/layouts/boilerplate') %>
<div class="row">
	<div class="col-8">
		<div class="card mb-3 shadow rounded">
			<img class="img-fluid" src="<%= campground.image %>" alt="" />
			<div class="card-body">
				<h1 class="card-title"><%= campground.title %></h1>
				<h2 class="text-muted"><%= campground.location %></h2>
				<h3>
					<span class="text-success">$<%= campground.price %></span
					><small> per night</small>
				</h3>

				<p class="card-text"><%= campground.description %></p>
				<a class="btn btn-info" href="/campgrounds/<%= campground.id %>/edit"
					>Edit campground</a
				>
				<form
					action="/campgrounds/<%= campground.id %>?_method=DELETE"
					method="POST"
					class="d-inline"
				>
					<button class="btn btn-danger mb-6" type="submit">
						Delete campground
					</button>
				</form>
			</div>
		</div>
	</div>
	<div class="col-4">
		<h2 class="mb-3 mt-5">Leave a review</h2>
		<form
			class="mb-5 validated-form"
			action="/campgrounds/<%= campground.id %>/reviews"
			method="POST"
			novalidate
		>
			<div class="mb-3">
				<label class="form-label" for="rating">Rating</label>
				<input
					type="range"
					name="review[rating]"
					class="form-range"
					id="rating"
					min="1"
					max="5"
					step="1"
					value="5"
				/>
			</div>
			<div class="mb-3">
				<label class="form-label" for="body">Review</label>
				<textarea
					class="form-control"
					name="review[body]"
					id="body"
					cols="30"
					rows="3"
					required
				></textarea>
			</div>
			<button class="btn btn-success">Submit</button>
		</form>
		<% for (let review of campground.reviews) { %>
		<div class="card mb-4 border-primary">
			<div class="card-body">
				<h5 class="card-title">Rating: <%= review.rating %>/5</h5>
				<p class="card-text"><%= review.body %></p>
			</div>
		</div>
		<% } %>
	</div>
</div>
